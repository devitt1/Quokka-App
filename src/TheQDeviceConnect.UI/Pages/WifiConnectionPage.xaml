                    VerticalOptions="Start"
                    x:Name="PasswordEntry">
                </Entry>-->

                <locals:CustomEntry
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Start"
                    Margin="24, 0, 24, 0"
                    HeightRequest="70"
                    >

                </locals:CustomEntry>


                <Button
                    Text="Back"
                    BackgroundColor="Transparent"
                    TextColor="#1F2E4D"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="50"
                    IsEnabled="True"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    VerticalOptions="EndAndExpand"
                    Margin="0, 0, 0, 10">
                </Button>

                <Button
                    x:Name="nextToConnectingToWifiPage"
                    Text="NEXT"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="50"
                    IsEnabled="True"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Margin="0, 0, 0, 20"
                    Command="{mvx:MvxBind GoToWifiConnectionViewModelCommand}">
                    <Button.Background>
                        <LinearGradientBrush
                            StartPoint="0,0"
                            EndPoint="1,1">
                            <GradientStop Color="#2B2B2B" Offset="0.0" />
                            <GradientStop Color="#1E2023" Offset="0.5" />
                            <GradientStop Color="#1F2E4D" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackLayout>

            <StackLayout
                Orientation="Vertical"
                x:Name="WifiConnectingPage"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                IsVisible="false">
                <Label
                    Margin="0, 53, 0, 0"
                    Text="Connecting to Wi-Fi"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    TextColor="#222225"
                    FontSize="20"
                    VerticalOptions="Start"
                    HorizontalOptions="CenterAndExpand"/>

                 <Label
                    Margin="0, 49, 0, 0"
                    Text="Please wait ..."
                    HorizontalTextAlignment="Center"
                    TextColor="#42404A"
                    FontSize="15"
                    VerticalOptions="Start"
                    HorizontalOptions="CenterAndExpand"/>

               <ActivityIndicator
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    Color="#7BAADC"
                    Margin="0, 30, 0, 0"
                    HeightRequest="60"
                    WidthRequest="60"
                    IsRunning="True">
                    <ActivityIndicator.Scale>
                        <OnPlatform
                            x:TypeArguments="x:Double"
                            iOS="1"
                            Android="1">
                        </OnPlatform>
                    </ActivityIndicator.Scale>
              </ActivityIndicator>

                <!--<Button
                    Text="Cancel"
                    BackgroundColor="Transparent"
                    TextColor="#1F2E4D"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="50"
                    IsEnabled="True"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    VerticalOptions="EndAndExpand"
                    Margin="0, 0, 0,20"
                    >
                </Button>-->
            </StackLayout>

              <StackLayout
                x:Name="WifiNetworkConnectedPage"
                Orientation="Vertical"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">

                <Label
                    Margin="0, 53, 0, 0"
                    Text="Connect The Q to the same&#10;Wi-Fi network as your&#10;mobile"
                    HorizontalTextAlignment="Center"
                    TextColor="#222225"
                    FontSize="20"
                    VerticalOptions="Start"
                    HorizontalOptions="CenterAndExpand"/>

                <Label
                    Text="STEP 4"
                    TextColor="#222225"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    Margin="0, 10, 0, 10"
                    FontSize="15"
                    VerticalOptions="Start" 
                    HorizontalOptions="CenterAndExpand"/>

                <Label
                    Text="The Q is now connected to the same&#10;Wi-Fi network as your mobile and the two&#10;devices are linked.&#10;&#10;Tap the button below to open the app."
                    HorizontalTextAlignment="Center"
                    TextColor="#42404A"
                    FontSize="16"
                    Margin="0, 0, 0, 20"
                    VerticalOptions="Start"
                    HorizontalOptions="CenterAndExpand"/>

                <Button
                    x:Name="openTheQButton"
                    Text="OPEN THE Q"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="50"
                    IsEnabled="True"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    VerticalOptions="EndAndExpand"
                    Margin="0, 0, 0, 20">
                    <Button.Background>
                        <LinearGradientBrush
                            StartPoint="0,0"
                            EndPoint="1,1">
                            <GradientStop Color="#2B2B2B" Offset="0.0" />
                            <GradientStop Color="#1E2023" Offset="0.5" />
                            <GradientStop Color="#1F2E4D" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackLayout>

        </StackLayout>
